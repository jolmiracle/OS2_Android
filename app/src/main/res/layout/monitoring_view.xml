<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS nøjagtighed:"
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.00 m"
            android:id="@+id/monitoring_view_acc_text"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Du har nu kørt"
        android:id="@+id/textView11"
        android:textColor="#000"
        android:textSize="28dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.70 Km"
        android:id="@+id/monitoring_view_dist_text"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp"
        android:textStyle="bold"
        android:textColor="#000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sidst opdateret kl:"
            android:id="@+id/textView12"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14.41.37"
            android:id="@+id/monitoring_view_acc_textmonitoring_view_last_fix_text"
            android:textColor="#000"
            android:textStyle="italic"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Pause kørsel"
        android:id="@+id/monitoring_view_pause_resume_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#DB813C"
        android:textColor="#fff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Afslut kørsel"
        android:id="@+id/monitoring_view_stop_btn"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#DB813C"
        android:layout_marginTop="20dp"
        android:textColor="#fff" />
</LinearLayout>